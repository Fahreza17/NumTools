<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/large_abstract_5"
    android:padding="16dp"
    tools:context=".KongruensiActivity">

    <Button
        android:id="@+id/kembali"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_baseline_close_32"
        />


    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="245dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center_horizontal"
        android:text="Kongruensi \nModulo"
        android:textColor="#EEEE"
        android:textSize="32sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/ic_baseline_error_16"
        android:drawablePadding="9dp"
        android:drawableTint="#99EEEEEE"
        android:fontFamily="@font/montserrat_medium"
        android:text="Masukkan Bilangan kongruensi dengan angka mod"
        android:textColor="#99EEEEEE"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/judul"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_text"
        android:hint="26 2 8"
        android:inputType="number|text" />

    <Button
        android:id="@+id/button"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="kongruensi"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:text="Hasil" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:gravity="center_horizontal"
        android:textSize="30pt"
        android:textColor="@color/white"
        android:fontFamily="@font/firamono_bold"
        android:layout_marginTop="29dp"
        android:background="@drawable/view_output" />

</RelativeLayout>